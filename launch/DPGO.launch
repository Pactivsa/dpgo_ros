<launch>
  <arg name="num_robots"                            value="6" />
  <arg name="debug"                                 default="false" />
  <arg name="verbose"                               default="true" />
  <arg name="robust_cost_type"                      default="GNC_TLS" />
  <arg name="acceleration"                          default="false"/>
  <arg name="publish_iterate"                       default="true"/>
  <arg name="GNC_barc"                              default="3.0" />
  <arg name="GNC_num_updates"                       default="4"/>
  <arg name="GNC_mu_step"                           default="2.0" />
  <arg name="GNC_init_mu"                           default="1e-5" />
  <arg name="robust_opt_inner_iters_per_robot"      default="10" />
  <arg name="local_initialization_method"           default="Odometry"/>
  <arg name="update_rule"                           default="RoundRobin" />
  <arg name="RTR_iterations"                        default="3" />
  <arg name="RTR_tCG_iterations"                    default="50" />
  <arg name="RTR_gradnorm_tol"                      default="1e-2" />
  <arg name="robust_opt_warm_start"                 default="false" />
  <arg name="robot_names_file"                      default="$(find dpgo_ros)/params/robot_names.yaml"/>
  <arg name="robot_measurements_file"               default="$(find dpgo_ros)/params/robot_measurements.yaml"/>

  <!-- Launch ROS node to publish pose graph -->
  <node name="dataset_publisher"   pkg="dpgo_ros" type="dpgo_ros_dataset_publisher_node" output="screen">
    <param name="~num_robots"         type="int"     value="$(arg num_robots)" />
    <!-- <param name="~g2o_file"           type="str"     value="$(find dpgo_ros)/data/grid3D.g2o" /> -->
    <rosparam file="$(arg robot_names_file)" />
    <rosparam file="$(arg robot_measurements_file)" />
  </node>

  <!-- Launch individual PGO agents. Number must match /num_robots -->
  <group ns="kimera0">
    <include file="$(find dpgo_ros)/launch/PGOAgent.launch" pass_all_args="true">
      <arg name="agent_id"                         value="0" />
      <arg name="robot_names_file"                 value="$(arg robot_names_file)" />
      <arg name="robust_cost_type"                 value="$(arg robust_cost_type)" />
      <arg name="acceleration"                     value="$(arg acceleration)" />
      <arg name="publish_iterate"                  value="$(arg publish_iterate)"/>
      <arg name="verbose"                          value="$(arg verbose)" />
      <arg name="debug"                            value="$(arg debug)" />
      <arg name="update_rule"                      value="$(arg update_rule)"/>
      <arg name="local_initialization_method"      value="$(arg local_initialization_method)"/>
      <arg name="multirobot_initialization"        value="true"/>
      <arg name="RTR_iterations"                   value="$(arg RTR_iterations)" />
      <arg name="RTR_tCG_iterations"               value="$(arg RTR_tCG_iterations)" />
      <arg name="RTR_gradnorm_tol"                 value="$(arg RTR_gradnorm_tol)" />
      <arg name="relative_change_tolerance"        value="1e-2" />
      <arg name="GNC_use_probability"              value="false" />
      <arg name="GNC_quantile"                     value="0.9" />
      <arg name="GNC_barc"                         value="$(arg GNC_barc)" />
      <arg name="GNC_mu_step"                      value="$(arg GNC_mu_step)" />
      <arg name="GNC_init_mu"                      value="$(arg GNC_init_mu)" />
      <arg name="robust_opt_warm_start"            value="$(arg robust_opt_warm_start)" />
      <arg name="robust_opt_min_convergence_ratio" value="0.0" />
      <arg name="robust_opt_inner_iters_per_robot" value="$(arg robust_opt_inner_iters_per_robot)" />
      <arg name="robust_init_min_inliers"          value="3" />
      <arg name="GNC_num_updates"                  value="$(arg GNC_num_updates)" />
      <arg name="inter_update_sleep_time"          value="0.1" />
    </include>
  </group>

  <group ns="kimera1">
